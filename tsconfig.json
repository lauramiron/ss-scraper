{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "rootDir": ".",
    "noImplicitAny": false,
    "noEmitOnError": false
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
